<div class = "container">
  <%= form_for(@product) do |f| %>
      <% if @product.errors.any? %>
          <h2>Errors:</h2>
          <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
      <% end  %>
      <div class = "text-center center" id = "appearance" style="margin-left: 0%">
        <br>
        <%= image_tag('ecommerce.png', :size => '200x100') %>
      </div>

      <h1 class="text-center">New Product</h1>

        <div class="col-xs-5 col-xs-offset-4" style="right-width: 70px">
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>

        <div class="col-xs-5 col-xs-offset-4" style="right-width: 70px">
        <%= f.label :name %>
        <%= f.text_field :name, :placeholder => "name",class: 'form-control' %>
      </div>

      <div class="col-xs-5 col-xs-offset-4">
        <%= f.label :price %>
        <%= f.text_field :price, :placeholder => "price",class: 'form-control' %>
      </div>

      <div class="col-xs-5 col-xs-offset-4 text-center">
        <br>
        <%= f.submit "Create Product", class: "btn btn-primary"%>
      </div>

  <% end %>
</div>
